# Maintainer: Brad Fanella <cesura@archlinux.org>
# Contributor: Martin Wimpress <code@flexion.org>

pkgname=gde2-panel
pkgver=1.1.0
pkgrel=1
pkgdesc="The GnuDE2 Panel"
url="https://mate-desktop.org"
arch=('x86_64')
license=('GPL')
depends=('dbus-glib' 'libwnck' 'libcanberra' 'libmateweather' 'libsm' 'gde2-menus' 'gde2-desktop' 'gettext')
makedepends=('itstool' 'gobject-introspection')
source=("https://github.com/gde2-desktop/gde2-panel/archive/master.tar.gz")
groups=('gde2')
sha256sums=('SKIP')

build() {
    	cd "${pkgname}-master" 
    	./autogen.sh \
        	--prefix=/usr \
        	--libexecdir=/usr/lib/${pkgname} \
        	--sysconfdir=/etc \
        	--localstatedir=/var \
        	--enable-introspection

    	#https://bugzilla.gnome.org/show_bug.cgi?id=656231
    	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

    	make
}

package() {
    	cd "${pkgname}-master"
    	make DESTDIR="${pkgdir}" install
}
